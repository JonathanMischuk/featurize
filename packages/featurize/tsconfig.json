{
	"compilerOptions": {
		"outDir": "../../dist-featurize",
		"module": "esnext",
		"target": "es5",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"lib": ["esnext", "dom"],
		"types": ["node", "jest"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
